{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <!-- REGISTER -->
    <section id="register">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-box-plain">
                        <h2 class="bigintro">Register</h2>
                        {% if app.session.flashBag.has('error') %}
                            <div class="alert alert-danger">
                                {% for msg in app.session.flashBag.get('error') %}
                                    {{ msg }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {{ form_start(form, {'attr': {'method': 'post', 'action': ''} }) }}
                            <div class="form-group">
                                <label for="exampleInputName">Username</label>
                                <i class="fa fa-font"></i>
                                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'maxlength': '50'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <i class="fa fa-envelope"></i>
                                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'maxlength': '50'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Fullname</label>
                                <i class="fa fa-font"></i>
                                {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'maxlength': '50'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Phone</label>
                                <i class="fa fa-mobile"></i>
                                {{ form_widget(form.phone, { 'attr': {'class': 'form-control', 'maxlength': '50'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <i class="fa fa-lock"></i>
                                {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'maxlength': '50' } }) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword2">Repeat Password</label>
                                <i class="fa fa-check-square-o"></i>
                                <input type="password" name="comfirm_password" required class="form-control"  />
                            </div>
                            <div class="form-actions">
                                <label class="checkbox"> 
                                    <span>
                                        <input id="myCheck" type="checkbox" class="uniform" value="">
                                    </span> I agree to the <a href="">Terms of Service</a> and 
                                    <a href="http://socify.me/socify/login.html#">Privacy Policy</a>
                                </label>
                                <button type="submit" class="btn btn-success">Sign Up</button>
                            </div>
                        {{ form_end(form) }}

                        <div class="login-helpers">
                            <a href="{{ path('advertiser_login') }}" > Back to Login</a> <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/REGISTER -->
    <script type="text/javascript">

        $("form").submit( function( e ) {
            var checkbox = document.getElementById("myCheck").checked;
            if(!checkbox) {
                alert("Vui lòng đồng ý điều khoản của chúng tôi");
                return false;
            }
            form.submit();
        });

    </script>
{% endblock %}