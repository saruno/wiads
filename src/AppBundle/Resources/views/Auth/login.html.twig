{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <!-- LOGIN -->
    <section id="login" class="visible">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-box-plain">
                        <h2 class="bigintro">Login In</h2>
                        <div class="divide-40"></div>
                        <form action="{{ path('advertiser_login_check') }}" method="post">
                            <div class="form-group">
                                {% if error.message == 'Bad credentials.' %}
                                    {{ error.message | replace({"Bad credentials." : 'form.error_login'|trans }) }}
                                {% elseif error.message == 'User account is disabled.' %}
                                    {{ error.message | replace({"User account is disabled." : 'notification.no_active'|trans }) }}
                                {% elseif error.message == 'User account is locked.' %}
                                    {{ error.message | replace({"User account is locked." : 'notification.locked'|trans }) }}
                                {% endif %}
                                
                                <label for="exampleInputEmail1">Username</label>
                                <i class="fa fa-envelope"></i>
                                <input maxlength="50" type="text"  required name="_username" value="{{ last_username }}" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">{{ 'auth.password'|trans }}</label>
                                <i class="fa fa-lock"></i>
                                <input type="password" required class="form-control" name="_password">
                            </div>
                            <div class="form-actions">
                                <label class="checkbox"> <span><input type="checkbox" class="uniform" value=""></span> Remember me</label>
                                <button type="submit" class="btn btn-danger">Submit</button>
                            </div>
                        </form>

                        <div class="login-helpers">
                            <a href="{{ path('app_forgot') }}">Forgot Password?</a> <br>
                            Don't have an account with us? <a href="{{ path('app_register') }}">Register
                                now!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/LOGIN -->
{% endblock %}