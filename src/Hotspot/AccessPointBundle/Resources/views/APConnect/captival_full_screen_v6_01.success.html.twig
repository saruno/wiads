<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <title>SUCCESS</title>
    <link rel="stylesheet" media="screen" href="/bundles/hotspotaccesspoint/v6/styles/vendor.css">
    <link rel="stylesheet" media="screen" href="/bundles/hotspotaccesspoint/v6/styles/main.css">
    <link rel="stylesheet" media="screen" href="/bundles/hotspotaccesspoint/v6/styles/responsive.css">

</head>


<body>
<div class="container-wrap login-n2">
    <main class="wrapper">
        <div class="content">
            <div class="content-top">
                <h2 class="heading">Kết nối thành công</h2>
                <div class="owl-carousel owl-theme owl-login-n2">
                    {% if params['apName'] is not empty and params['apImage'] is not empty %}
                        {% if params['apUrl'] is not empty %}
                            <div class="item">
                                <a href="{{params['apUrl']}}" target="_blank"><div class="img-cover"  style="background-image: url('{{ params['apImage'] is not empty?params['apImage']:'/bundles/hotspotaccesspoint/v6/images/login_n1_slide_img_1.jpg' }}');"></div></a>
                            </div>
                        {% endif %}
                    {% endif %}
                    {% if ads is not empty %}
                        <div class="item">
                            <a href="{{linkTo}}" target="_blank"><div class="img-cover"  style="background-image: url('/ap/display.html?id={{ ads[0].Id }}&link={{ ads[0].linkTo | url_encode}}&called={{ params['called'] }}&mac={{ params['mac'] }}&uamip={{ params['uamip'] }}&ip={{ params['ip'] }}&userurl={{params['userurl']|url_encode}}');"></div></a>
                        </div>
                    {% else %}
                        <div class="item">
                            <a href="#" target="_blank"><div class="img-cover"  style="background-image: url('/bundles/advertiser/assets/img/ads.png');"></div></a>
                        </div>
                    {% endif %}

                </div>
            </div>
            <div class="content-bottom">
                {% if params['apName'] is not empty %}
                <h3 class="status">{{ params['apName'] |upper | replace ({'WIADS':'', '-' :''})}}</h3>
                {% endif %}
                <p class="text-content">Bắt đầu sử dụng wifi</p>
            </div>
        </div>
    </main>
</div>

<!-- SCRIPTS -->
<script src="/bundles/hotspotaccesspoint/v6/scripts/jquery.min.js"></script>
<script src="/bundles/hotspotaccesspoint/v6/scripts/vendor.js"></script>
<script src="/bundles/hotspotaccesspoint/v6/scripts/app.js"></script>	</body>
</html>
