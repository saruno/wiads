{% extends 'AdvertiserBundle::layout_matrix.html.twig' %}

{% block content %}
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"> 
            	<a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> 
            	<a href="{{ path('advertiser_datacustomer_giftcode') }}" class="current">Dữ liệu khách hàng</a> 
            </div>
        </div>
        <div class="container-fluid">
            <hr>
            <div class="row-fluid">
                <div class="span12">
                  	<div class="widget-box">

                        <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
                            <h5>Chọn chiến dịch quảng cáo để xem</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <form class="form-horizontal" method="get" action="">
                                <input type="hidden" value="1" name="giftcode_1" >
                                <div class="control-group">
                                    <label class="control-label">Chiến dịch</label>
                                    <div class="controls">
                                        <select name="advert" class="span4">
                                            {% if list_advert is defined and list_advert|length > 0 %}
                                                {% for value in list_advert %}
                                                    <option value="{{ value.id }}" >{{ value.title }}</option>
                                                {% endfor %}
                                            {% endif %}
                                        </select>
                                        <input style="margin-left:10px;" type="submit" value="Xác nhận" name="confirm_1" class="btn btn-success">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="widget-title" align="right"> 
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">

                        <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
                            <h5>Chọn khách hàng để xem</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <form class="form-horizontal" method="get" action="">
                                <input type="hidden" value="1" name="giftcode_1" >
                                <div class="control-group">
                                    <label class="control-label">Khách hàng</label>
                                    <div class="controls">
                                        <select name="customer" class="span4">
                                            {% if list_customer is defined and list_customer|length > 0 %}
                                                {% for value in list_customer %}
                                                    <option value="{{ value.id }}" >{{ value.name }}</option>
                                                {% endfor %}
                                            {% endif %}
                                        </select>
                                        <input style="margin-left:10px;" type="submit" value="Xác nhận" name="confirm_1" class="btn btn-success">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="widget-title" align="right"> 
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}