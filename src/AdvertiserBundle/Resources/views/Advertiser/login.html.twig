{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <!-- LOGIN -->
    <section id="login" class="visible">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-box-plain">
                        <h2 class="bigintro">Login In</h2>
                        <div class="divide-40"></div>
                        <form action="{{ path('advertiser_login_check') }}" method="post">
                            <div class="form-group">
                                {% if error %}
                                    <div>{{ error.message | replace({"Bad credentials." : "Invalid username or password."}) }}</div>
                                {% endif %}
                                <label for="exampleInputEmail1">Username</label>
                                <i class="fa fa-envelope"></i>
                                <input maxlength="50" type="text"  required name="_username" value="{{ last_username }}" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">{{ 'auth.password'|trans }}</label>
                                <i class="fa fa-lock"></i>
                                <input type="password" required class="form-control" name="_password">
                            </div>
                            <div class="form-actions">
                                <label class="checkbox"> <span><input type="checkbox" class="uniform" value=""></span> Remember me</label>
                                <button type="submit" class="btn btn-danger">Submit</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/LOGIN -->
{% endblock %}